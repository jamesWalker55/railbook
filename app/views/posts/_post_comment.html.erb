<%# render a comment, to be included within a post %>

<% user = comment.user %>
<article class="media post-comment">
  <div class="media-left">
    <%= link_to user, class: "has-text-dark" do %>
      <strong><%= user.email %></strong>
    <% end %>
  </div>
  <div class="media-content is-clipped">
    <div class="content">
      <p><%= comment.content %></p>
    </div>
    <%= link_to("Delete", comment, method: :delete) if comment.user == current_user %>
  </div>
</article>
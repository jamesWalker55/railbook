<% if mode == :send_request %>
  <%= link_to friend_path(user.id), method: :post do %>
    <%= yield %>
  <% end %>
<% elsif mode == :accept_request %>
  <%= link_to friend_path(user.id), method: :patch do %>
    <%= yield %>
  <% end %>
<% elsif mode == :remove_request %>
  <%= link_to friend_path(user.id), method: :delete do %>
    <%= yield %>
  <% end %>
<% elsif mode == :remove_friend %>
  <%= link_to friend_path(user.id), method: :delete, data: { confirm: "Remove this person as friend?" } do %>
    <%= yield %>
  <% end %>
<% end %>
